package hangman;

import java.io.File;
import java.util.HashSet;
import java.util.Set;

public class EvilHangmanGame implements IEvilHangmanGame {
  
  private String currentPattern = null;
  private Set<String> guessList = new HashSet<String>();
  int numberOfGuesses = 0;
  private File wordList = null;
  
  @Override
  public void startGame(File dictionary, int wordLength) {
    clear();
    wordList = dictionary;
    trimWordsBySize(wordLength);
    generateBlankPattern(wordLength);
  }

  private void generateBlankPattern(int wordLength) {
    StringBuilder pattern = new StringBuilder();
    for (int i = 0; i < wordLength; i++) {
      pattern.append("-");
    }
    currentPattern = pattern.toString();
  }

  @Override
  public Set<String> makeGuess(char guess) throws GuessAlreadyMadeException {
    // TODO Auto-generated method stub
    return null;
  }
  
  private void clear() {
    currentPattern = null;
    guessList.clear();
    numberOfGuesses = 0;
    wordList = null;
  }

}